

# ---------------------------------------------------
# マウス位置管理
# ---------------------------------------------------
class Mouse
  
  
  # -----------------------------------------------
  # コンストラクタ
  # -----------------------------------------------
  constructor: ->
    
    @x = 0;
    @y = 0;
    @oldX = 0;
    @oldY = 0;
    
    @_init();
  
  
  # ------------------------------------
  # 初期化
  # ------------------------------------
  _init: =>
    
    $(window).on("mousemove", @_eMouseMove);
  
  
  
  # -----------------------------------
  # イベント MouseMove
  # -----------------------------------
  _eMouseMove: (e) =>
    
    @oldX = @x;
    @oldY = @y;
    @x    = e.clientX;
    @y    = e.clientY;
  
  
  
  # -----------------------------------
  # 指定位置からマウス位置までの距離
  # -----------------------------------
  dist: (tx, ty) =>
    
    dx = tx - @x;
    dy = ty - @y;
    
    return Math.sqrt(dx * dx + dy * dy);






module.exports = Mouse;